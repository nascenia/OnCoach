<p id="notice"><%= notice %></p>

<div class="page-heading">
<h1><i class="fa fa-th-large"></i> Muscle Groups</h1>
</div>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @muscle_groups.each do |muscle_group| %>
      <tr>
        <td><%= muscle_group.name %></td>
        <td><%= link_to 'Show', muscle_group %></td>
        <td><%= link_to 'Edit', edit_muscle_group_path(muscle_group) %></td>
        <td><%= link_to 'Destroy', muscle_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

