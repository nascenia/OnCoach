<div class="page-heading">
  <h1><i class='fa fa-list'></i> Muscle Group</h1>
  <h3>Associated Muscles List</h3>
</div>
<div class="row">

  <div class="col-md-6">
    <div class="widget">
      <div class="widget-header">
        <h2>Muscle Group with Associated Muscles</h2>
      </div>
      <div class="widget-content padding">
        <div class="dd" id="nestable">
          <ol class="dd-list dd-nodrag">
            <li class="dd-item">
              <div class="dd-handle">
                <%= @muscle_group.name %>
                <a title="Edit" href="<%= edit_muscle_group_path(@muscle_group) %>" class="pull-right tooltip-info dd-nodrag btn btn-primary btn-xs text-white-1">
                  <i class="fa fa-pencil"></i>
                </a>
              </div>

              <ol class="dd-list dd-nodrag">
                <% @muscle_group.muscles.each do |muscle| %>
                    <li class="dd-item">
                      <div class="dd-handle">
                        <%= link_to muscle.name, '#', class: 'dd-nodrag' %>
                      </div>
                    </li>
                <% end %>

              </ol>
            </li>
          </ol>
        </div>
      </div>
    </div>

  </div>

</div>
