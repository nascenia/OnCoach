<div class="page-heading">
  <h1>
    <span class="glyphicon glyphicon-th-large"></span>
    Admin Dashboard
  </h1>
</div>
<%#= link_to 'Creare New User', admin_new_path, :class => 'btn btn-success pull-right' %>

<div class="col-sm-12 portlets ui-sortable">
  <div class="widget">
    <div class="widget-header">
      <h2><strong>Users</strong> list</h2>
      <div class="additional-btn">
        <a href="#" class="hidden reload"><span class="glyphicon glyphicon-refresh"></span></a>
        <a href="#" class="widget-toggle"><span class="glyphicon glyphicon-chevron-down"></span></a>
        <a href="#" class="widget-close" data-toggle="modal" data-target="#myModal">
          <span class="glyphicon glyphicon-remove"></span>
        </a>
      </div>
    </div>
    <div class="widget-content padding">
      <table class="table table-responsive" >
        <thead>
            <tr>
              <th>User Email</th>
              <th>Type</th>
              <th>Activated On</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                  <td><%= user.email %></td>
                  <td><%= user.type.nil? ? 'User' : user.type %></td>
                  <td><%= user.created_at %></td>
                </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= render 'layouts/taskbar' %>
