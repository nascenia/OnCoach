<div class="page-heading">
  <h1><i class='fa fa-list'></i> Exercises</h1>
  <h3>Exercises List</h3>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="widget">
      <div class="widget-header">
        <h2><strong>Exercises</strong> DataTable</h2>
      </div>
      <div class="widget-content">
        <br>

        <div class="table-responsive">
          <form class='form-horizontal' role='form'>
            <table id="datatables-1" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
                  <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Youtube video link</th>
                    <th>Calories</th>
                    <th></th>
                  </tr>
              </thead>

              <tbody>
                  <% @exercises.each do |exercise| %>
                      <tr>
                        <td><%= exercise.name %></td>
                        <td><%= exercise.exercise_category.name %></td>
                        <td><%= exercise.exercise_type %></td>
                        <td><%= exercise.description.html_safe %></td>
                        <td><%= image_tag exercise.image, :size => "200x150" %></td>
                        <td><%= link_to exercise.youtube_video_link, exercise.youtube_video_link, :target => '_blank' %></td>
                        <td><%= exercise.calories %></td>
                        <td><%= link_to 'Show', exercise %></td>
                      </tr>
                  <% end %>
              </tbody>
            </table>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'layouts/taskbar' %>
