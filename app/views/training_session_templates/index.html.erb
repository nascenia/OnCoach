<p id="notice"><%= notice %></p>

<h1>Training Session Template</h1>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercise_plans.each do |exercise_plan| %>
      <tr>
        <td><%= exercise_plan.name %></td>
        <td><%= link_to 'Show', exercise_plan %></td>
        <td><%= link_to 'Edit', edit_training_session_template_path(exercise_plan) %></td>
        <td><%= link_to 'Destroy', exercise_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
