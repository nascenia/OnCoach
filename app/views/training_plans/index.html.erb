<p id="notice"><%= notice %></p>

<h1>Training Plans</h1>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @training_plans.each do |training_plan| %>
      <tr>
        <td><%= training_plan.name %></td>
        <td><%= link_to 'Show', training_plan %></td>
        <td><%= link_to 'Edit', edit_training_plan_path(training_plan) %></td>
        <td><%= link_to 'Destroy', training_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Training plan', new_training_plan_path %>
