<div class="page-heading">
  <h1><i class='fa fa-list'></i> Exercise Categories</h1>
  <h3>Exercise Categories List</h3>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="widget">
      <div class="widget-header">
        <h2><strong>Exercise Categories</strong> DataTable</h2>
      </div>
      <div class="widget-content">
        <br>

        <div class="table-responsive">
          <form class='form-horizontal' role='form'>
            <table id="datatables-1" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
              <tr>
                <th>Name</th>
                <th>Ancestry</th>
                <th></th>
              </tr>
              </thead>

              <tbody>
              <% @exercise_categories.each do |category| %>
                  <tr>
                    <td><%= category.name %></td>
                    <td><%= category.ancestry %></td>
                    <td><%= link_to 'Show', category %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/taskbar' %>

